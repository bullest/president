<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/twitter_item">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/twitter_image"/>

    <TextView
        android:id="@+id/twitter_en"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        android:textColor="@color/textPrimary"
        android:text="Loading..."
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/twitter_image"
        tools:text="So much Fake News. Never been more voluminous or more inaccurate. But through it all, our country is doing great!"/>

    <TextView
        android:id="@+id/twitter_cn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        tools:text="到处都是假新闻。但是，我们的国家还是很好.到处都是假新闻。但是，我们的国家还是很好.到处都是假新闻。但是，我们的国家还是很好.到处都是假新闻。但是，我们的国家还是很好"
        android:textColor="@color/textPrimary"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/twitter_en"/>

    <TextView
        android:id="@+id/twitter_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textAlignment="textEnd"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        android:textColor="@color/textPrimary"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/twitter_cn"
        tools:text="5:44 PM - 26 Mar 2018"/>

</android.support.constraint.ConstraintLayout>